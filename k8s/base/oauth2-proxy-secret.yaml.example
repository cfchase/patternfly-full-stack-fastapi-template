# OAuth2 Proxy Secret Template
# Copy this file to oauth2-proxy-secret.yaml and fill in your provider credentials
#
# IMPORTANT: Never commit the actual secret file to version control!
#
# Supported Providers:
# - Keycloak/Red Hat SSO (OIDC)
# - Google OAuth
# - GitHub OAuth
#
# Generate cookie secret with: openssl rand -base64 32 | tr -- '+/' '-_'

apiVersion: v1
kind: Secret
metadata:
  name: oauth2-proxy-secret
type: Opaque
stringData:
  # ===================
  # Required for all providers
  # ===================
  OAUTH2_PROXY_COOKIE_SECRET: "<generate-with-openssl-rand>"

  # ===================
  # Provider: Keycloak / Red Hat SSO (OIDC)
  # ===================
  # OAUTH2_PROXY_PROVIDER: "oidc"
  # OAUTH2_PROXY_OIDC_ISSUER_URL: "https://keycloak.example.com/realms/your-realm"
  # OAUTH2_PROXY_CLIENT_ID: "your-client-id"
  # OAUTH2_PROXY_CLIENT_SECRET: "your-client-secret"
  # OAUTH2_PROXY_OIDC_EMAIL_CLAIM: "email"
  # OAUTH2_PROXY_OIDC_GROUPS_CLAIM: "groups"

  # ===================
  # Provider: Google OAuth
  # ===================
  # OAUTH2_PROXY_PROVIDER: "google"
  # OAUTH2_PROXY_CLIENT_ID: "your-google-client-id.apps.googleusercontent.com"
  # OAUTH2_PROXY_CLIENT_SECRET: "your-google-client-secret"

  # ===================
  # Provider: GitHub OAuth
  # ===================
  # OAUTH2_PROXY_PROVIDER: "github"
  # OAUTH2_PROXY_CLIENT_ID: "your-github-client-id"
  # OAUTH2_PROXY_CLIENT_SECRET: "your-github-client-secret"
  # OAUTH2_PROXY_GITHUB_ORG: "your-org"  # Optional: restrict to org members
  # OAUTH2_PROXY_GITHUB_TEAM: "your-team"  # Optional: restrict to team members
