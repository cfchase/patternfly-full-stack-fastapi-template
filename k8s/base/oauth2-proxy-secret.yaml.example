# OAuth2-Proxy Secret Configuration
# Copy this file to oauth2-proxy-secret.yaml and update with your provider credentials
# DO NOT commit the actual secret file to version control

apiVersion: v1
kind: Secret
metadata:
  name: oauth2-proxy-secret
  labels:
    app: oauth2-proxy
type: Opaque
stringData:
  # Cookie secret for encrypting session cookies
  # Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
  cookie-secret: "CHANGE_ME_GENERATE_A_SECURE_RANDOM_VALUE"

  # ============================================================================
  # KEYCLOAK / RED HAT SSO CONFIGURATION
  # ============================================================================
  # Uncomment and configure for Keycloak/RHSSO
  # keycloak-provider: "oidc"
  # keycloak-client-id: "your-client-id"
  # keycloak-client-secret: "your-client-secret"
  # keycloak-oidc-issuer-url: "https://keycloak.example.com/realms/your-realm"
  # keycloak-redirect-url: "https://your-app.example.com/oauth2/callback"

  # ============================================================================
  # GOOGLE CONFIGURATION
  # ============================================================================
  # Uncomment and configure for Google OAuth
  # google-provider: "google"
  # google-client-id: "your-google-client-id.apps.googleusercontent.com"
  # google-client-secret: "your-google-client-secret"
  # google-redirect-url: "https://your-app.example.com/oauth2/callback"

  # ============================================================================
  # GITHUB CONFIGURATION
  # ============================================================================
  # Uncomment and configure for GitHub OAuth
  # github-provider: "github"
  # github-client-id: "your-github-oauth-app-client-id"
  # github-client-secret: "your-github-oauth-app-client-secret"
  # github-redirect-url: "https://your-app.example.com/oauth2/callback"
  # github-org: ""  # Optional: restrict to specific GitHub organization
  # github-team: ""  # Optional: restrict to specific GitHub team
